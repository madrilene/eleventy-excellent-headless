---
layout: base
---

<header class="section spot-color-secondary">
  <div class="section__inner region">
    <div class="wrapper flow">
      <section class="prose text-center">
        <h1 class="fade-in">{{ title }}</h1>
      </section>
    </div>
  </div>

  {% include 'svg/divider-edgy.svg' %}
</header>

<article class="region">
  <div class="wrapper flow prose">
    {{ content | safe }}
  </div>
</article>


<ul class="wrapper grid mt-l-xl" role="list" data-rows="masonry" data-layout="50-50">
  {%- for item in pagination.items %}
  <li class="card flow">
    <h2>
      <a href="/posts/{{ item.title.rendered | slug }}">
        {{ item.title.rendered }}
      </a>
    </h2>
    <p>{{ item.excerpt.rendered | excerpt | safe }}</p>
  </li>
  {% endfor %}
</ul>



<section class="wrapper region">
<nav role="navigation" aria-label="Pagination">
  <ul class="pagination">
    <li>
      {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}">Previous</a>
      {% else %}Previous{% endif %}
    </li>
    {%- for pageEntry in pagination.pages %}
      <li>
        <a href="{{ pagination.hrefs[ loop.index0 ] }}" {% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page" {% endif %}>
          {{ loop.index }}</a>
      </li>
    {%- endfor %}
    <li>
      {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}">Next</a>
      {% else %}Next{% endif %}
    </li>
  </ul>
</nav>
</section>